{# templates/index.j2 #}


<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>LogBooker</title>

    <style>
        @media print {
            table { page-break-after:auto }
            tr    { page-break-inside:avoid; page-break-after:auto }
            td    { page-break-inside:avoid; page-break-after:auto }
        }
       
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        table {
            margin-left: 2%;
            margin-top: 2rem;
        }

        #table-report, #table-ttd {
            width: 96%;
            border-collapse: collapse;
        }

        #table-report tr {
            height: 3rem;
        }

        #table-ttd {
            text-align: center;
        }

        .table-border tr th {
            border: 1px solid black;
        }
    </style>
  </head>
  {% include "components/header.j2" %}
  <body>
    <div>
        <table id="table-info">
            <tr>
                <td>
                    Nomor Induk
                </td>
                <td>
                    : {{ data["mahasiswa"]["nim"] }}
                </td>
            </tr>
            <tr>
                <td>
                    Nama Mahasiswa
                </td>
                <td>
                    : {{ data["mahasiswa"]["nama"] }}
                </td>
            </tr>
            <tr>
                <td>
                    Kegiatan
                </td>
                <td>
                    : {{ data["kegiatan"] }}
                </td>
            </tr>
        </table>
    </div>
    <div>
        <table id="table-report" class="table-border">
            <tr>
                <th style="width: 50%;">
                    URAIAN KEGIATAN
                </th>
                <th>
                    BUKTI KEGIATAN
                </th>
                <th style="width: 20%;">
                    TTD PEMB. LAPANGAN
                </th>
            </tr>
            {% for data in report_data %}
                {% include "components/table_body.j2"%}
            {% endfor %}
        </table>
    </div>
    <div>
        <table id="table-ttd">
            <tr>
                <td style="width: 70%"></td>
                <td>
                    <span>{{ data["tanggal_laporan"] }}</span><br>
                    <span>Dosen Pendamping</span><br>
                    <br/>
                    <br/>
                    <br/>
                    <span><b><u>{{ data["dosen"]["nama"] }}</u></b></span><br/>
                    <span><b>NIDN. {{data["dosen"]["nidn"] }}</b></span>
                </td>
            </tr>
        </table>
    </div>
  </body>
</html>
